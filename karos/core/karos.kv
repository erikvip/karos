# The FloatLayout is used only to allow absolute positioning of notifications
FloatLayout:
    size_hint: (1, 1)
    Growl:
    BoxLayout:
        size_hint: (1, 1)
        orientation: 'vertical'
        id: container
        SystemBar:
            id: systembar
            size_hint: (1, 0.1)
        ScreenManager:
            id: sm
            size_hint: (1, 0.8)
            Screen:
                id: mainscreen
                name: 'main'
                size_hint: (1, 1)
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: (255, 0, 255, 0.2)
                        Color:
                            rgba: (12, 12, 12, 0.1)
                        Line:
                            points: [0, 0, self.width, 0, self.width, self.height, 0, self.height, 0, 0]
                            width: 6
                        Rectangle:
                            size: self.size
                        #BorderImage: 
                        #    source: "/home/erikp/Pictures/Wallpapers/Best/369383.jpg"
                        #    pos: self.parent.pos
                        #    size: self.parent.size
                        #    border: [1, 1, 1, 1]

                    id: mainscroll
                    size_hint: (1, 1)
                    #size_hint: (None, None)
                    #height: root.height - root.ids.systembar.height
                    #height: root.height - 42
                    #width: root.width
                    pos_hint: {'right': 1, 'bottom': 1}
                    do_scroll_x: False
                    do_scroll_y: True
                    
                    GridLayout:
                        #canvas.before:
                        #    Color:
                        #        rgb: (255, 0, 0)
                        #    Rectangle:
                        #        size: self.size

                        id: maingrid
                        #cols: 5
                        cols: int(floor(root.width / (app.get_desktop_icon_size() + self.spacing[0] )))
                        padding: ( (root.width-(self.cols*(app.get_desktop_icon_size() + self.spacing[0])))/2 , 0, 0, 40)
                        spacing: 12
                        size_hint: (None, None)
                        pos: (root.center)
                        #width: self.minimum_width

                        width: root.width
                        height: self.minimum_height
        MediaBar:
            size_hint: (1, 0.1)


                    
