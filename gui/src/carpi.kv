#:kivy 1.0.9

<-PluginIcon>:
    source:""
    text:""
    direction: "vertical"
    on_press: app.p(root)     
    canvas.after:
        BorderImage:
            source: root.source
            pos: root.center
            #size: root.width-12, root.height - 12
            #size: self.size
            #size: 96, 96
    Label:
        text: root.text
        pos: (root.center_x, root.y) 
        text_size: (root.width, None) 

        halign: 'center'
        valign: 'bottom'
        font_size: 13


