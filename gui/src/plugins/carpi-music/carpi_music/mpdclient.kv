<MpdSeparator@Widget>:
    canvas.before:
        Color:
            rgb: (.5, .5, .5)
        Rectangle:
            pos: self.pos
            size: self.size



<-MpdItem>:
    index: 0
    mpd_media: ""
    mpd_name: ""
    mpd_data: {}
    spacing: "10dp"
    canvas.before:
        Color:
            #rgb: (1, 1, 1) if root.index % 2 == 0 else (.95, .95, .95)
            rgba: (0, 0, 0, 1) if root.index % 2 == 0 else (.15, .15, .15, 0.5)
        Rectangle:
            pos: self.pos
            size: self.size

    AsyncImage:
        source: root.mpd_media
        size_hint_x: None
        width: self.height
        allow_stretch: True
    Label:
        font_size: "20sp"
        text: root.mpd_name
        color: (1, 1, 1, 1)
        text_size: (self.width, None)
    Button:
        text: 'Open'
        size_hint: (0.15, 1)
        on_press: root.on_press(app, self)


<-Music>:
    id:browser
    TabbedPanel:
        id: tabs
        do_default_tab: False
        size_hint: (1, 0.75)
        TabbedPanelItem:
            id: librarytab
            text: 'Library'
            Accordion:
                id: libraryaccordion
                AccordionItem:
                    id: devices
                    title: "Devices"
                AccordionItem:
                    id: library
                    title: "Music Library"
                    RecycleView:
                        id: mpdlibrary
                        data: root.mpd_root_data
                        key_viewclass: "viewclass"
                        key_size: "height"
        TabbedPanelItem:
            id: playlists
            text: 'Playlists'
            Accordion:
                id: playlistsaccordion
                AccordionItem:
                    id: currentplaylist
                    title: "Current Playlist"
                AccordionItem:
                    id: savedplaylists
                    title: "Saved Playlists"
