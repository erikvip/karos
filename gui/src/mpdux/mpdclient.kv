<MpdSeparator@Widget>:
    canvas.before:
        Color:
            rgb: (.5, .5, .5)
        Rectangle:
            pos: self.pos
            size: self.size

#<-MpdItem>:
<-MpdItem@BoxLayout>:
    index: 0
    mpd_media: ""
    mpd_name: ""
    mpd_data: {}
    spacing: "10dp"
    canvas.before:
        Color:
            #rgb: (1, 1, 1) if root.index % 2 == 0 else (.95, .95, .95)
            rgba: (0, 0, 0, 1) if root.index % 2 == 0 else (.15, .15, .15, 0.5)
        Rectangle:
            pos: self.pos
            size: self.size

    AsyncImage:
        source: root.mpd_media
        size_hint_x: None
        width: self.height
        allow_stretch: True
    Label:
        font_size: "20sp"
        text: root.mpd_name
        color: (1, 1, 1, 1)
        text_size: (self.width, None)
    Button:
        text: 'Open'
        size_hint: (0.15, 1)
        on_press: root.on_press(self)
